defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
tls_starttls    off
logfile        ~/.msmtp.log

account         [local acc name]
host            [mail.host]
port            [port]
from            [acc@domain.ext]
user            [acc@domain.ext]
password        [plain text]
account default : [local acc name]
